<Application x:Class="Schedule.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Schedule"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources\Styles\Brushes.xaml"/>
                <ResourceDictionary Source="Resources\Styles\BordersDictionary.xaml"/>
                <ResourceDictionary Source="Resources\Styles\TextBoxDictionary.xaml"/>
                <ResourceDictionary Source="Resources\Styles\ButtonsDictionary.xaml"/>
                <ResourceDictionary Source="Resources\Styles\ComboBoxDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="AddRoundButton" TargetType="Button" BasedOn="{StaticResource RoundButton}">
                <Setter Property="Height" Value="50"/>
                <Setter Property="Width" Value="50"/>
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>
