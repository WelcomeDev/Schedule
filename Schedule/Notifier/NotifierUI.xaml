<UserControl x:Class="Schedule.Notifier.NotifierUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Schedule.Notifier"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <TextBox Name="messageTextBox"
             Style="{StaticResource ReadOnlyUnderlinedTextBox}"
             BorderBrush="Transparent"
             Margin="0,0,0,20"
             HorizontalAlignment="Center"
             VerticalAlignment="Bottom"
             FontSize="24"
             Background="Transparent"
             Foreground="{StaticResource PreActiveDarkFontBrush}"/>
</UserControl>
